{
  "name": "polaris-icons",
  "version": "1.0.0",
  "author": "Shopify Inc.",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "start": "yarn workspace app-icon-explorer run start",
    "develop": "yarn workspace app-icon-explorer run develop",
    "dev": "yarn run develop",
    "generate-icon-packages": "node scripts/generate-icon-packages.js",
    "identify-deprecated-icons": "node scripts/identify-deprecated-icons.js",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:js": "yarn run eslint '**/*.{js,ts,tsx}'",
    "lint:css": "yarn run stylelint '**/*.{scss}'",
    "test": "jest",
    "type-check": "tsc",
    "release": "lerna publish",
    "prerelease": "node scripts/identify-deprecated-icons.js",
    "heroku-postbuild": "yarn run lerna run build && yarn workspace app-icon-explorer run build-web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/polaris-icons.git"
  },
  "bugs": {
    "url": "https://github.com/shopify/polaris-icons/issues"
  },
  "homepage": "https://github.com/shopify/polaris-icons#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-typescript": "^7.3.3",
    "@shopify/images": "^1.1.5",
    "@svgr/core": "^4.1.0",
    "ajv": "^6.9.2",
    "babel-preset-shopify": "^17.0.1",
    "eslint": "5.6.0",
    "eslint-plugin-shopify": "^26.3.0",
    "glob": "^7.1.3",
    "hast-util-select": "^3.0.0",
    "jest": "^24.1.0",
    "js-yaml": "^3.12.2",
    "lerna": "2.11.0",
    "prettier": "^1.16.4",
    "rehype-parse": "^6.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.3.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-pluginutils": "^2.4.1",
    "stylelint": "^9.10.1",
    "stylelint-config-shopify": "^7.1.0",
    "svgo": "^1.2.0",
    "typescript": "^3.1.3",
    "unified": "^7.1.0"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/typescript",
      "plugin:shopify/react",
      "plugin:shopify/jest",
      "plugin:shopify/node",
      "plugin:shopify/eslint-comments",
      "plugin:shopify/prettier"
    ],
    "settings": {
      "react": {
        "version": "16.7"
      }
    },
    "rules": {
      "no-console": "off",
      "node/exports-style": "off",
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "**/rollup.config.js",
          "**/tests/*.js",
          "**/scripts/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": [
          "packages/polaris-icons/src/index.ts",
          "packages/polaris-icons-internal/src/index.ts"
        ],
        "rules": {
          "shopify/images-no-direct-imports": "off"
        }
      },
      {
        "files": [
          "packages/app-icon-explorer/**/*"
        ],
        "rules": {
          "id-length": [
            "error",
            {
              "min": 2,
              "exceptions": [
                "_",
                "q"
              ]
            }
          ]
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-shopify/prettier"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".cache"
    ]
  }
}
